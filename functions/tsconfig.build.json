{
  "extends": "./tsconfig.json",     // tsconfig.json의 설정을 확장
  "compilerOptions": {
    "module": "CommonJS",           // CommonJS 모듈 사용
    "target": "ES2020"              // ES2020으로 타겟 설정
  },
  "exclude": [
    "node_modules",                 // node_modules 폴더 제외
    "lib"                           // lib 폴더 제외 (빌드 결과물)
  ]
}
